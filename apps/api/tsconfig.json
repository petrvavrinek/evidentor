{
  "compilerOptions": {
    "composite": true,
    "alwaysStrict": true,
    "strict": true,
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/db/*": ["./src/db/*"]
    }
  }
}