{
  "name": "@evidentor/api",
  "version": "0.0.1",
  "description": "API for evidentor project",
  "author": "Petr Vavřínek",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "bun ./src/main.ts",
    "dev": "bun --watch ./src/main.ts",
    "gen:authschema": "bun @better-auth/cli generate --output ./src/db/auth.schema.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:apply": "bun run ./scripts/migrate.ts",
    "drizzle:studio": "drizzle-kit studio"
  },
  "keywords": [
    "nodejs",
    "api",
    "backend"
  ],
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@better-auth/cli": "^1.3.8",
    "@biomejs/biome": "^2.2.3",
    "@types/bun": "^1.2.21",
    "bun-types": "^1.2.21",
    "drizzle-kit": "^0.31.4",
    "openapi-types": "^12.1.3"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@evidentor/logging": "workspace:*",
    "@evidentor/queues": "workspace:*",
    "@evidentor/storage": "workspace:*",
    "@otherguy/elysia-logging": "^0.0.17",
    "better-auth": "^1.3.8",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.21",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0"
  },
  "trustedDependencies": []
}
