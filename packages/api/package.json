{
  "name": "@evidentor/api",
  "version": "0.0.1",
  "description": "API for evidentor project",
  "author": "Petr Vavřínek",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "bun ./src/main.ts",
    "dev": "bun ./src/main.ts --watch",
    "gen:authschema": "bun @better-auth/cli@latest generate --output ./src/db/auth.schema.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:apply": "drizzle-kit migrate"
  },
  "keywords": [
    "nodejs",
    "api",
    "backend"
  ],
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@types/pg": "^8.15.2",
    "drizzle-kit": "^0.31.1",
    "bun-types": "latest"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.0",
    "better-auth": "^1.2.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "elysia": "latest",
    "pg": "8.16.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  }
}
