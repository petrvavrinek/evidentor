{
  "name": "@evidentor/api",
  "version": "0.0.1",
  "description": "API for evidentor project",
  "author": "Petr Vavřínek",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "bun ./src/main.ts",
    "dev": "bun --watch ./src/main.ts",
    "gen:authschema": "bun @better-auth/cli generate --output ./src/db/auth.schema.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:apply": "bun run ./scripts/migrate.ts",
    "drizzle:studio": "drizzle-kit studio"
  },
  "keywords": [
    "nodejs",
    "api",
    "backend"
  ],
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@better-auth/cli": "^1.2.12",
    "@biomejs/biome": "^2.0.6",
    "@types/bun": "^1.2.17",
    "@types/pg": "^8.15.4",
    "bun-types": "^1.2.17",
    "drizzle-kit": "^0.31.4"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@otherguy/elysia-logging": "^0.0.17",
    "better-auth": "^1.2.12",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.5",
    "elysia-ip": "^1.0.10",
    "pg": "8.16.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  }
}
